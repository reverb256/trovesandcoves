# Environment Configuration for Serverless Deployment
# Copy this to .env.local and fill in your values

# Database (Neon - Serverless PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# Deployment URLs
ALLOWED_ORIGIN=https://reverb256.github.io/troves-coves
VITE_API_URL=https://troves-coves-api.vercel.app
VITE_GITHUB_PAGES_URL=https://reverb256.github.io/troves-coves

# Environment
NODE_ENV=production
ENVIRONMENT=serverless

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CART=true
VITE_ENABLE_SEARCH=true

# Performance Settings
VITE_REQUEST_TIMEOUT=10000
VITE_MAX_RETRIES=3

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_CORS=true

# API Configuration
MAX_REQUESTS_PER_DAY=90000
ENABLE_CACHING=true
CACHE_TTL=3600