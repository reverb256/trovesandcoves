# Environment Configuration Template
# Copy this to .env.local and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/trovesandcoves

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key_here

# Deployment Mode
VITE_DEPLOYMENT_MODE=hybrid
VITE_PLATFORM=github-pages-cloudflare

# API Configuration
VITE_API_URL=https://troves-coves-api.trovesandcoves.ca.workers.dev
VITE_GITHUB_PAGES_URL=https://reverb256.github.io/troves-coves
VITE_FALLBACK_MODE=github-pages

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CART=true
VITE_ENABLE_SEARCH=true

# Free Tier Optimization
VITE_CACHE_TTL=3600
VITE_REQUEST_TIMEOUT=10000
VITE_MAX_RETRIES=3

# Analytics (Optional - leave empty to disable)
VITE_CLOUDFLARE_ANALYTICS=
VITE_GOOGLE_ANALYTICS=

# AI Services (Optional - leave empty to disable)
VITE_ENABLE_AI_RECOMMENDATIONS=false
VITE_AI_FALLBACK_MODE=static

# Development
VITE_DEV_MODE=false
VITE_DEBUG_MODE=false

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_CORS=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true
VITE_BUNDLE_ANALYZER=false
